<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0 http://maven.apache.org/xsd/assembly-2.2.0.xsd">
    <id>confluent-zip</id>

    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/main/distributions/text</directory>
            <outputDirectory/>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/.keep</exclude>
                <exclude>**/*.formatted</exclude>
                <exclude>config/*.properties</exclude>
                <exclude>manifest.json</exclude>
            </excludes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/distributions/text</directory>
            <outputDirectory/>
            <filtered>true</filtered>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>manifest.json</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/distributions/text/config</directory>
            <outputDirectory>config</outputDirectory>
            <lineEnding>keep</lineEnding>
            <includes>
                <include>sink-*.properties</include>
                <include>source-*.properties</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <includes>
                <include>
                    org.neo4j.connectors.kafka:common
                </include>
                <include>
                    org.neo4j.connectors.kafka:sink
                </include>
                <include>
                    org.neo4j.connectors.kafka:sink-connector
                </include>
                <include>
                    org.neo4j.connectors.kafka:source
                </include>
                <include>
                    org.neo4j.connectors.kafka:source-connector
                </include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}
            </outputFileNameMapping>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <excludes>
                <exclude>
                    org.neo4j.connectors.kafka:*
                </exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>